<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:orientation="vertical"
    android:padding="4dp" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Bisque"
                android:text="Vending Machine Status" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Chocolate"
                    android:text="Total:" />

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Chartreuse"
                    android:gravity="right"
                    android:text="0" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/CadetBlue"
                android:text="Stock:" />

            <TextView
                android:id="@+id/tv_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/LemonChiffon" />

            <CheckBox
                android:id="@+id/checkBoxAdminMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickAdminMode"
                android:text="Admin Mode" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/aqua"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supplier Menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_insert_coke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:onClick="onClickInsertCoke"
                android:text="insert Coke" />

            <Button
                android:id="@+id/btn_purchase_coke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:onClick="onClickPurchaseCoke"
                android:text="purchase Coke" />

            <Button
                android:id="@+id/btn_refund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:onClick="onClickRefund"
                android:text="refund" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Money" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_insert_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickMoney"
                android:text="10" />

            <Button
                android:id="@+id/btn_insert_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickMoney"
                android:text="50" />

            <Button
                android:id="@+id/btn_insert_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickMoney"
                android:text="100" />

            <Button
                android:id="@+id/btn_insert_500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickMoney"
                android:text="500" />

            <Button
                android:id="@+id/btn_insert_1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickMoney"
                android:text="1000" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AA66CC" >

            <TextView
                android:id="@+id/tv_log"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFBB33"
                android:text="[Log]\n" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>